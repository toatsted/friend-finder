<h2>Survey Questions</h2>
<hr>

<h3><strong>About You</strong></h3>
<h4>Name (Required)</h4>
<input id="name" class="form-control" required="" type="text">

<h4>Link to Photo Image (Required)</h4>
<input id="photo" class="form-control" required="" type="text">

<hr>

{{#each questions}}
	<h3><strong>Question {{index}}</strong></h3>
	<h4>{{question}}</h4>
	<div class="form-group">
		<select class="form-control" id="q{{index}}">
			<option value=""></option>
			<option value="1">1 (Strongly Disagree)</option>
			<option value="2">2</option>
			<option value="3">3</option>
			<option value="4">4</option>
			<option value="5">5 (Strongly Agree)</option>
		</select>
	</div> 
{{/each}}

<br>
<br>

<button type="submit" class="btn btn-primary btn-lg btn-block" id="submit"
data-toggle="modal" data-target="#matchModal">Submit</button>

<div class="modal fade" id="matchModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="modalLabel">Your match</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<h2 id="matchName"></h2>
				<img src="#" alt="match image" id="matchImg">
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>

<hr>
<footer class="footer">
	<div class="container">
	<p><a href="/api/friends">API Friends List</a> | <a href="https://github.com/toatsted/friendfinder">GitHub Repo</a></p>
	</div>
</footer>
</div>

<script src="/survey.js"></script>
